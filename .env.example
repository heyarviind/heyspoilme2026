# HeySpoilMe Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# Database
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=heyspoilme

# ===========================================
# Google OAuth
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Local: http://localhost:8081/api/auth/google/callback
# Prod:  https://heyspoil.me/api/auth/google/callback
GOOGLE_REDIRECT_URL=https://heyspoil.me/api/auth/google/callback

# ===========================================
# JWT Authentication
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this

# ===========================================
# S3 / Cloudflare R2 Storage
# ===========================================
AWS_ACCESS_KEY_ID=your-r2-access-key-id
AWS_SECRET_ACCESS_KEY=your-r2-secret-access-key
AWS_REGION=auto
S3_BUCKET=heyspoilme
S3_BASE_URL=https://your-r2-public-url.r2.dev
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# ===========================================
# Frontend URL
# ===========================================
# Local: http://localhost:3001
# Prod:  https://heyspoil.me
FRONTEND_URL=https://heyspoil.me

# ===========================================
# Email (ZeptoMail)
# ===========================================
ZEPTOMAIL_API_KEY=your-zeptomail-api-key
ZEPTOMAIL_FROM_EMAIL=noreply@heyspoilme.com
ZEPTOMAIL_FROM_NAME=HeySpoilMe

# ===========================================
# Discord Notifications (Optional)
# ===========================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# ===========================================
# Admin Panel Access
# ===========================================
# Access admin at: /admin/{ADMIN_CODE_1}/{ADMIN_CODE_2}
ADMIN_CODE_1=your-secret-code-1
ADMIN_CODE_2=your-secret-code-2
